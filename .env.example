# Kali Linux Docker Environment Configuration

# Container settings
CONTAINER_NAME=kali-linux
IMAGE_NAME=kali-linux-complete:latest

# Database credentials (PostgreSQL)
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=testdb

# Database credentials (MySQL)
MYSQL_ROOT_PASSWORD=admin123
MYSQL_USER=admin
MYSQL_PASSWORD=admin123
MYSQL_DATABASE=testdb

# SSH Configuration
SSH_PORT=22

# Resource limits
CPU_LIMIT=2
MEMORY_LIMIT=4G
CPU_RESERVATION=1
MEMORY_RESERVATION=2G

# Network
NETWORK_NAME=kali-network

# Volumes
WORKSPACE_DIR=./workspace
SHARED_DIR=./shared

# Additional tools to install (space-separated)
# Add tool names here and rebuild to include them
EXTRA_TOOLS=""
